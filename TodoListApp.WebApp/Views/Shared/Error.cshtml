@model ErrorViewModel
@{
	ViewData["Title"] = "Error";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="error-container">
	<div class="error-card">
		<div class="error-content">
			<div class="error-icon">
				@if (Model.StatusCode == 404)
				{
					<span>üîç</span>
				}
				else if (Model.StatusCode == 401 || Model.StatusCode == 403)
				{
					<span>üîí</span>
				}
				else if (Model.StatusCode == 501)
				{
					<span>üöß</span>
				}
				else
				{
					<span>‚ö†Ô∏è</span>
				}
			</div>

			<div class="text-center">
				<span class="status-badge">@Model.StatusCode</span>
			</div>

			<h1 class="error-title">
				@switch (Model.StatusCode)
				{
					case 404:
						@:Page Not Found
						break;
					case 401:
						@:Unauthorized
						break;
					case 403:
						@:Access Denied
						break;
					case 501:
						@:Not Implemented
						break;
					default:
						@:Oops! Something Went Wrong
						break;
				}
			</h1>

			<p class="error-subtitle">@Model.ErrorMessage</p>

			<div class="error-details-box">
				<div class="error-detail-item">
					<span class="error-detail-label">Error Code:</span>
					<span class="error-detail-value">@Model.ErrorCode</span>
				</div>
				@if (Model.ShowRequestId)
				{
					<div class="error-detail-item">
						<span class="error-detail-label">Request ID:</span>
						<span class="error-detail-value">@Model.RequestId</span>
					</div>
				}
				<div class="error-detail-item">
					<span class="error-detail-label">Timestamp:</span>
					<span class="error-detail-value">@Model.Timestamp.ToString("yyyy-MM-dd HH:mm:ss UTC")</span>
				</div>
			</div>

			@if (Model.ShowDetails)
			{
				<div class="error-technical">
					<h5 style="margin-top: 0; color: #ffd700;">Technical Details (Development Mode Only):</h5>
					<pre>@Model.ErrorDetails</pre>
				</div>
			}

			<div class="error-actions">
				<a href="/" class="btn-error btn-primary-error">
					üè† Go Home
				</a>
				<button onclick="history.back()" class="btn-error btn-secondary-error">
					‚Üê Go Back
				</button>
				@if (Model.StatusCode == 501)
				{
					<a href="/Account/Login" class="btn-error btn-secondary-error">
						Try Login
					</a>
				}
			</div>
		</div>
	</div>
</div>
