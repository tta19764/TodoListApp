@using Microsoft.AspNetCore.Http.Extensions
@using TodoListApp.Services.Enums
@using TodoListApp.Services.WebApi.Enums
@model TodoTasksListViewModel

@if (Model != null && Model.ListId != 0)
{
	if (Model.Tasks.Any())
	{
		@foreach (var task in Model.Tasks)
		{
			<partial name="_TaskCardPartial" model="task" />
		}
	}
	else
	{
		<div class="text-center py-5">
			<i class="bi bi-inbox text-muted" style="font-size: 3rem;"></i>
			<p class="text-muted mt-3">No tasks found</p>
			<a asp-controller="TodoTasks"
			   asp-action="Create"
			   asp-route-listId="@Model.ListId"
			   class="btn btn-primary btn-sm">
				Create First Task
			</a>
		</div>
	}
}