@model PasswordResetEmailViewModel
@{
	Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Reset Your Password</title>
	<style>
		body {
			font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
			background-color: #f4f4f4;
			margin: 0;
			padding: 0;
		}

		.email-container {
			max-width: 600px;
			margin: 20px auto;
			background-color: #ffffff;
			border-radius: 10px;
			overflow: hidden;
			box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
		}

		.email-header {
			background: #218838;
			color: #ffffff;
			padding: 40px 20px;
			text-align: center;
		}

			.email-header h1 {
				margin: 0;
				font-size: 28px;
				font-weight: 600;
			}

			.email-header .icon {
				font-size: 60px;
				margin-bottom: 10px;
			}

		.email-body {
			padding: 40px 30px;
			color: #333333;
			line-height: 1.6;
		}

			.email-body h2 {
				color: #667eea;
				font-size: 22px;
				margin-bottom: 20px;
			}

			.email-body p {
				margin: 15px 0;
				font-size: 16px;
			}

		.greeting {
			font-size: 18px;
			font-weight: 600;
			color: #333;
		}

		.button-container {
			text-align: center;
			margin: 35px 0;
		}

		.reset-button {
			display: inline-block;
			background: #218838;
			color: #ffffff !important;
			padding: 15px 40px;
			text-decoration: none;
			border-radius: 50px;
			font-weight: 600;
			font-size: 16px;
			box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
			transition: transform 0.2s ease;
		}

			.reset-button:hover {
				transform: translateY(-2px);
				box-shadow: 0 6px 20px rgba(102, 126, 234, 0.6);
			}

		.link-section {
			background-color: #f8f9fa;
			border-left: 4px solid #218838;
			padding: 15px;
			margin: 25px 0;
			border-radius: 5px;
		}

			.link-section p {
				margin: 5px 0;
				font-size: 14px;
				color: #666;
			}

		.reset-link {
			word-break: break-all;
			color: #667eea;
			font-size: 13px;
			font-family: 'Courier New', monospace;
		}

		.warning-box {
			background-color: #fff3cd;
			border: 1px solid #ffc107;
			border-radius: 5px;
			padding: 15px;
			margin: 25px 0;
		}

			.warning-box strong {
				color: #856404;
			}

			.warning-box p {
				margin: 5px 0;
				color: #856404;
				font-size: 14px;
			}

		.info-box {
			background-color: #e7f3ff;
			border: 1px solid #0d6efd;
			border-radius: 5px;
			padding: 15px;
			margin: 25px 0;
		}

			.info-box p {
				margin: 5px 0;
				color: #084298;
				font-size: 14px;
			}

		.email-footer {
			background-color: #f8f9fa;
			padding: 30px;
			text-align: center;
			border-top: 1px solid #e9ecef;
		}

			.email-footer p {
				margin: 5px 0;
				font-size: 13px;
				color: #6c757d;
			}

		.divider {
			border: none;
			border-top: 1px solid #e9ecef;
			margin: 30px 0;
		}

		.security-icon {
			display: inline-block;
			width: 20px;
			height: 20px;
			background-color: #ffc107;
			border-radius: 50%;
			text-align: center;
			line-height: 20px;
			margin-right: 5px;
		}
	</style>
</head>
<body>
	<div class="email-container">
		<div class="email-header">
			<div class="icon">üîê</div>
			<h1>Password Reset Request</h1>
		</div>

		<div class="email-body">
			<p class="greeting">Hello @(string.IsNullOrEmpty(Model.FirstName) ? "User" : Model.FirstName),</p>

			<p>We received a request to reset your password for your <strong>TodoList</strong> account.</p>

			<p>If you made this request, click the button below to reset your password:</p>

			<div class="button-container">
				<a href="@Model.ResetLink" class="reset-button">Reset Password</a>
			</div>

			<div class="link-section">
				<p><strong>Or copy and paste this link into your browser:</strong></p>
				<p class="reset-link">@Model.ResetLink</p>
			</div>

			<div class="warning-box">
				<p>
					<span class="security-icon">‚è∞</span>
					<strong>Important:</strong> This link will expire in @Model.ExpirationHours hours for security reasons.
				</p>
			</div>

			<div class="info-box">
				<p>
					<strong>Didn't request a password reset?</strong><br />
					If you didn't request this password reset, you can safely ignore this email. Your password will remain unchanged and your account is secure.
				</p>
			</div>

			<hr class="divider">

			<p style="font-size: 14px; color: #6c757d;">
				For security reasons, we cannot reset your password without the link above.
				If you continue to have problems, please contact our support team.
			</p>
		</div>

		<div class="email-footer">
			<p><strong>TodoList App</strong></p>
			<p>This is an automated message. Please do not reply to this email.</p>
			<p style="margin-top: 15px; font-size: 12px;">
				¬© @DateTime.Now.Year TodoList App. All rights reserved.
			</p>
		</div>
	</div>
</body>
</html>