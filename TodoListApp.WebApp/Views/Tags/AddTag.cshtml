@model AddTagToTaskViewModel
@{
	ViewData["Title"] = "Add Tag to Task";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
	<div class="row">
		<div class="col-lg-6 mx-auto">
			<div class="card shadow-sm">
				<div class="card-header bg-primary text-white">
					<h4 class="mb-0">
						<i class="bi bi-tag-fill"></i> Add Tag to Task
					</h4>
				</div>
				<div class="card-body">
					<form asp-controller="Tags" asp-action="AddTag" method="post">
						<input type="hidden" asp-for="TaskId" />
						<input type="hidden" asp-for="ReturnUrl" />

						<div class="mb-3">
							<label class="form-label fw-bold">Select a Tag</label>
							<select asp-for="SelectedTagId" class="form-select" required>
								<option value="">-- Select a tag --</option>
								@foreach (var tag in Model.AvailableTags)
								{
										<option value="@tag.Id">@tag.Title</option>
								}
							</select>
							<span asp-validation-for="SelectedTagId" class="text-danger"></span>
						</div>

						<div class="alert alert-info">
							<i class="bi bi-info-circle"></i>
							<strong>Note:</strong> Only tags that haven't been added to this task are shown.
						</div>

						<div class="d-flex justify-content-between mt-4">
							<a href="@Model.ReturnUrl" class="btn btn-outline-secondary">
								<i class="bi bi-x-lg"></i> Cancel
							</a>
							<button type="submit" class="btn btn-primary">
								<i class="bi bi-plus-lg"></i> Add Tag
							</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>

@section Scripts {
		<partial name="_ValidationScriptsPartial" />
}