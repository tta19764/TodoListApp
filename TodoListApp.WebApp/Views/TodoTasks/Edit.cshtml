@using TodoListApp.Services.WebApi.Enums
@model EditTodoTaskViewModel
@{
    ViewData["Title"] = "Edit Task";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Edit Task</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <input type="hidden" asp-for="TaskId" />
                        <input type="hidden" asp-for="ListId" />
                        <input type="hidden" asp-for="ReturnUrl" />

                        <div class="mb-3">
							<label asp-for="Title" class="form-label" for="EditTaskTitle">
								Task Title
							</label>
                            <input id="EditTaskTitle" asp-for="Title" class="form-control" placeholder="Enter task title" autofocus />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
							<label asp-for="Description" class="form-label" for="EditTaskDescription">
								Description
							</label>
                            <textarea id="EditTaskDescription" asp-for="Description" class="form-control" rows="4" placeholder="Enter task description (optional)"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
								<label asp-for="DueDate" class="form-label" for="EditTaskDueDate">
									Due Date
								</label>
                                <input id="EditTaskDueDate" asp-for="DueDate" type="date" class="form-control" />
                                <span asp-validation-for="DueDate" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
								<label asp-for="Status" class="form-label" for="EditTaskStatus">
									Status
								</label>
                                <select id="EditTaskStatus" asp-for="Status" class="form-select">
                                    <option value="@TodoTaskStatus.NotStarted">Not Started</option>
									<option value="@TodoTaskStatus.InProgress">In Progress</option>
									<option value="@TodoTaskStatus.Completed">Completed</option>
                                </select>
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-flex gap-2 justify-content-end mt-4">
                            <a href="@Model.ReturnUrl" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Danger Zone -->
            <div class="card shadow-sm mt-4 border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">Danger Zone</h5>
                </div>
                <div class="card-body">
                    <p class="text-muted mb-3">Once you delete a task, there is no going back. Please be certain.</p>
                    <form asp-action="Delete" asp-route-id="@Model.TaskId" asp-route-listId="@Model.ListId" asp-route-returnUrl="@Url.Action("Index", "TodoLists", new { listId = Model.ListId })" 
                          method="post" 
                          onsubmit="return confirm('Are you sure you want to delete this task? This action cannot be undone.');">
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Delete This Task
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}