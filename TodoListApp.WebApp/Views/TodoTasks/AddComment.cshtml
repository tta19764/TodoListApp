@model AddCommentViewModel
@{
	ViewData["Title"] = "Add Comment";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
	<div class="row">
		<div class="col-lg-6 mx-auto">
			<div class="card shadow-sm">
				<div class="card-header bg-primary text-white">
					<h4 class="mb-0">
						<i class="bi bi-chat-left-text"></i> Add Comment
					</h4>
					<small>Task: @Model.TaskTitle</small>
				</div>
				<div class="card-body">
					<form asp-controller="TodoTasks" asp-action="AddComment" method="post">
						<input type="hidden" asp-for="TaskId" />
						<input type="hidden" asp-for="TaskTitle" />
						<input type="hidden" asp-for="ReturnUrl" />

						<div class="mb-3">
							<label asp-for="Text" class="form-label fw-bold" for="AddCommentText">Comment Text</label>
							<textarea
									id="AddCommentText"
									asp-for="Text"
									  class="form-control"
									  rows="5"
									  placeholder="Enter your comment here..."
									  required></textarea>
							<span asp-validation-for="Text" class="text-danger"></span>
						</div>

						<div class="alert alert-info">
							<i class="bi bi-info-circle"></i>
							<strong>Note:</strong> Comments will be visible to all users who have access to this task.
						</div>

						<div class="d-flex justify-content-between mt-4">
							<a href="@Model.ReturnUrl" class="btn btn-outline-secondary">
								<i class="bi bi-x-lg"></i> Cancel
							</a>
							<button type="submit" class="btn btn-primary">
								<i class="bi bi-plus-lg"></i> Add Comment
							</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}