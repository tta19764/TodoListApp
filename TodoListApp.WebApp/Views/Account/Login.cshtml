@model LoginViewModel

@{
	ViewData["Title"] = "Log in";
	Layout = "_Layout";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
	<div class="col-md-4">
		<section>
			<form id="account" method="post">
				<h2>Use a local account to log in.</h2>
				<hr />
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="form-floating">
					<input asp-for="Login" class="form-control" autocomplete="username" aria-required="true" />
					<label asp-for="Login" class="form-label"></label>
					<span asp-validation-for="Login" class="text-danger"></span>
				</div>
				<div class="form-floating">
					<input asp-for="Password" class="form-control" autocomplete="current-password" aria-required="true" />
					<label asp-for="Password" class="form-label"></label>
					<span asp-validation-for="Password" class="text-danger"></span>
				</div>
				<div class="form-floating">
					<input asp-for="ReturnUrl" type="hidden" class="form-control" />
				</div>
				<div>
					<div class="checkbox">
						<label asp-for="RememberMe" class="form-label">
							<input class="form-check-input" asp-for="RememberMe" />
							@Html.DisplayNameFor(m => m.RememberMe)
						</label>
					</div>
				</div>
				<div>
					<button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
				</div>
				<div>
					<p>
						<a id="forgot-password" asp-controller="Account" asp-action="ChangePassword">Forgot your password?</a>
					</p>
					<p>
						<a asp-controller="Account" asp-action="Register">Register as a new user</a>
					</p>
					<p>
						<a asp-controller="Account" asp-action="ResendEmail">Resend email confirmation</a>
					</p>
				</div>
			</form>
		</section>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}